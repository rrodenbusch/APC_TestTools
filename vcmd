#!/bin/bash
IP="10.50.$1"
RCMD="$2"
[ "$2" == "gitAll" ] && export RCMD="/home/pi/APC_TestTools/gitAll"
[ "$2" == "getvpn" ] && export RCMD="/home/pi/APC_TestTools/getvpn"
[ "$2" == "stopRPi.pl" ] && export RCMD="/home/pi/APC_TestTools/stopRPi.pl"
[ "$2" == "grabAll" ] && export RCMD="/home/pi/APC_TestTools/getvpn"
[ "$2" == "map" ] && export RCMD="/home/pi/APC_TestTools/map.sh"
[ "$2" == "Force" ] && export RCMD="/home/pi/APC_TestTools/ForceUpdate"
[ "$2" == "push" ] && export RCMD="/home/pi/APC_TestTools/pushRPi.sh"
echo "$RCMD at $IP"
ssh pi@"$IP" "$RCMD"
